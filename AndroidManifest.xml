<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cck_mobile"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.cck_mobile.MainActivity"
            android:label="@string/app_name"
			android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.cck_mobile.TextActivity"
            android:label="@string/title_activity_text"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.example.cck_mobile.CultureActivity"
            android:label="@string/title_activity_culture"
			android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.example.cck_mobile.CxActivity"
            android:label="@string/title_activity_cx"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.example.cck_mobile.LearningActivity"
            android:label="@string/title_activity_learning"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.example.cck_mobile.XMLActivity"
            android:label="@string/title_activity_xml"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>